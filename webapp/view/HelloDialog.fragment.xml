<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog 
        id="helloDialog"
        title="Hello {/recepient/name}">
        <content>
            <core:Icon 
                src="sap-icon://hello-world"
                size="8rem"
                class="sapUiMediumMargin">
            </core:Icon>
            <Text text="This is a Dialog opened from a button in a fragment"/>
        </content>
        <buttons>
            <Button text="Close" press=".onCloseDialog"></Button>
        </buttons>
    </Dialog>
</core:FragmentDefinition>